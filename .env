# Настройки сервера
SERVER_PORT=8080
SERVER_SHUTDOWN_TIMEOUT=5
SERVER_READ_TIMEOUT=10
SERVER_WRITE_TIMEOUT=10

# Настройки PostgreSQL для внешнего использования
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5433

# Настройки PostgreSQL для Docker
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=manga_reader
POSTGRES_SSLMODE=disable

# Настройки JWT
JWT_SECRET=your_super_secret_key_change_it_in_production
JWT_ACCESS_TTL=15  # минуты
JWT_REFRESH_TTL=7  # дни
JWT_SIGNING_ALGORITHM=HS256

# Настройки логгера
LOG_LEVEL=info  # debug, info, warn, error
LOG_JSON=false  # true для JSON формата, false для текстового

# Настройки хранилища
STORAGE_IMAGES_PATH=./data/images

# Настройки Redis для Docker
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_TTL=60  # минуты

# Настройки Redis для внешнего использования
# REDIS_HOST=localhost
# REDIS_PORT=6389